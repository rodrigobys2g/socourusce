    </li>
<?php endforeach;?>
</ul>

<script type="text/javascript">
//<![CDATA[
    var esmartLoggingActionsLabel = $('<?php echo $this->getHtmlId() ?>').up('table').select('td.label label');
    if (esmartLoggingActionsLabel) {
        var esmartLoggingActions = $('<?php echo $this->getHtmlId() ?>').parentNode.select('ul.checkboxes input');
        if (esmartLoggingActions) {
            var esmartLoggingShouldBeChecked = true;
            Event.observe(esmartLoggingActionsLabel[0], 'click', function () {
                for (var i = 0; i < esmartLoggingActions.length; i++) {
                    esmartLoggingActions[i].checked = esmartLoggingShouldBeChecked;
                }
                esmartLoggingShouldBeChecked = !esmartLoggingShouldBeChecked;
            });
        }
    }
//]]>
</script>
